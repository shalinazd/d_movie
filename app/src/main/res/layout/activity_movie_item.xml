    <TextView
        android:id="@+id/tv_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/tv_title_item"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_item_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cv_item_news"
        app:layout_constraintTop_toTopOf="@+id/cv_item_news"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_desc_movie"
        android:layout_width="@dimen/_200dp"
        android:layout_height="80dp"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="5"
        android:text="@string/tv_dummy_desc_mov"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_title_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_item" />

    <TextView
        android:id="@+id/tv_dummy_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/dummy_release_date"
        android:textSize="@dimen/_10sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_desc_movie"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_desc_movie"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_movie"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_dummy_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/dummy_genre"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_desc_movie"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_dummy_release"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_movie" />

    <TextView
        android:id="@+id/tv_dummy_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_rate"
        android:fontFamily="@font/poppins"
        android:padding="@dimen/_4dp"
        android:text="@string/txt_dummy_rate"
        android:textColor="@color/font_color2"
        android:textSize="@dimen/_12sp"
        app:drawableStartCompat="@drawable/star_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>